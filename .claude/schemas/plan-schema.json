{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://myworkflow.local/schemas/plan-schema.json",
  "title": "Parallel Execution Plan",
  "description": "Schema for parallel-aware execution plans generated by the Planning Agent",
  "type": "object",
  "required": ["objective", "phases"],
  "additionalProperties": false,
  "properties": {
    "objective": {
      "type": "string",
      "description": "High-level goal of the plan",
      "minLength": 10
    },
    "phases": {
      "type": "array",
      "description": "Ordered list of execution phases",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/phase"
      }
    },
    "verification": {
      "$ref": "#/$defs/verification"
    }
  },
  "$defs": {
    "phase": {
      "type": "object",
      "description": "A phase containing one or more tasks",
      "required": ["phase", "name", "parallel", "tasks"],
      "additionalProperties": false,
      "properties": {
        "phase": {
          "type": "integer",
          "description": "Phase number (1-indexed)",
          "minimum": 1
        },
        "name": {
          "type": "string",
          "description": "Descriptive name for the phase",
          "minLength": 3
        },
        "parallel": {
          "type": "boolean",
          "description": "Whether tasks in this phase can run in parallel"
        },
        "depends_on": {
          "type": "array",
          "description": "Array of phase numbers this phase depends on",
          "items": {
            "type": "integer",
            "minimum": 1
          },
          "uniqueItems": true
        },
        "tasks": {
          "type": "array",
          "description": "Array of tasks in this phase",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/task"
          }
        }
      }
    },
    "task": {
      "type": "object",
      "description": "An atomic task to be executed by a sub-agent",
      "required": ["id", "description", "agent_type", "prompt", "expected_output"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the task (snake_case)",
          "pattern": "^[a-z][a-z0-9_]*$",
          "minLength": 3,
          "maxLength": 50
        },
        "description": {
          "type": "string",
          "description": "Brief description of task purpose",
          "minLength": 10
        },
        "agent_type": {
          "type": "string",
          "description": "Type of agent to execute this task",
          "enum": ["research", "deep-research", "explore", "implement", "review"]
        },
        "prompt": {
          "type": "string",
          "description": "Detailed instructions for the agent",
          "minLength": 20
        },
        "inputs": {
          "type": "array",
          "description": "Array of task IDs whose outputs this task needs",
          "items": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$"
          },
          "uniqueItems": true
        },
        "expected_output": {
          "type": "string",
          "description": "What the agent should return",
          "minLength": 5
        }
      }
    },
    "verification": {
      "type": "object",
      "description": "Verification steps and success criteria",
      "additionalProperties": false,
      "properties": {
        "steps": {
          "type": "array",
          "description": "Steps to verify the plan was executed correctly",
          "items": {
            "type": "string",
            "minLength": 5
          },
          "minItems": 1
        },
        "success_criteria": {
          "type": "array",
          "description": "What defines success",
          "items": {
            "type": "string",
            "minLength": 5
          },
          "minItems": 1
        }
      },
      "required": ["steps", "success_criteria"]
    }
  }
}
